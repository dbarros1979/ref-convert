@article{10.1145/3342285,
author = {Putnam, Cynthia and Hanschke, Christina and Todd, Jennifer and Gemmell, Jonathan and Kollia, Mia},
title = {Interactive Technologies Designed for Children with Autism: Reports of Use and Desires from Parents, Teachers, and Therapists},
year = {2019},
